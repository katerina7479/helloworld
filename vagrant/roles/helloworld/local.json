{
  "name": "helloworld-local",
  "json_class": "Chef::Role",
  "description": "Role for local helloworld app",
  "chef_type": "role",

  "default_attributes": {
    "app": {
      "sites": [
        {
          "name": "test",
          "variables": {
            "port": 80,
            "hostname": "localhost",
            "root": "/vagrant/"
          }
        }
      ]
    }
  },
  "override_attributes": {},
  "run_list": [
	  "recipe[nginx]",
	  "recipe[python]",
	  "recipe[helloworld::nginx_sites]",
	  "recipe[helloworld::python_envs]"
  ]
}
