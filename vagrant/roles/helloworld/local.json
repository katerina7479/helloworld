{
  "name": "helloworld-local",
  "json_class": "Chef::Role",
  "description": "Role for local helloworld app",
  "chef_type": "role",

  "default_attributes": {
    "app": {
	  "inits": {
		  "helloworld":{
			"start_on": "vagrant-mounted",
			"user": "vagrant",
			"app_path": "/vagrant",
			"virtual_env_path": "/home/vagrant/hello_env"
		  }
	  },
      "sites": [
        {
          "name": "test",
          "variables": {
            "port": 80,
            "hostname": "localhost",
            "root": "/vagrant/"
          }
        }
      ]
    }
  },
  "override_attributes": {},
  "run_list": [
	  "recipe[nginx]",
	  "recipe[python]",
	  "recipe[helloworld::nginx_sites]",
	  "recipe[helloworld::python_envs]",
	  "recipe[helloworld::upstarts]"
  ]
}
